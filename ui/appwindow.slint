import { Button, VerticalBox,LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    title:"pdf-to-txt_gui";
    height:150px;
    width:300px;

    in-out property<string> url: "";
    in-out property<string> status:"";
    callback submit-url(string);
    callback open-file();

    VerticalBox {
        //url from main.rs/rust
        Text{text:"file \{root.url}";}
         status := Text{
            text:"Status: \{root.status}";

         }
        Button {
            height:50px;
            text: "Open file...";
            clicked => {
                //  root.submit-url(input.text);
                // call here to rusty file dialog form main.rs
                root.open_file();
            }
        }  
    }
}
